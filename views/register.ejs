<div class="row mt-5" style= "height: 10px">
  <div class="col-md-6 m-auto">
    <div class="col-md-12 m-auto">
      <h1 class="text-center mb-3">
         Đăng Kí
      </h1>
      <%- include ('./partials/messages') %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label style="color:rgb(37, 116, 180);" for="name">Tên đăng kí</label>
          <input style="border-radius: 10px;  border: 1px solid black"
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label style="color:rgb(37, 116, 180);" for="email">Email</label>
          <input style="border-radius: 10px; border: 1px solid black"
            
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email "
            
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label style="color:rgb(37, 116, 180);" for="password">Mật khẩu</label>
          <input style="border-radius: 10px; border: 1px solid black"
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label style="color:rgb(37, 116, 180);" for="password2">Nhập lại mật khẩu</label>
          <input style="border-radius: 10px; border: 1px solid black"
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button style="margin-top:10px" type="submit" class="btn btn-primary btn-block">
          Đăng kí
        </button>
      </form>
      <p class="lead mt-4">Có một tài khoản? <a href="/users/login">Đăng nhập</a></p>
    </div>
  </div>
</div>