<div class="row mt-5" style=" height: 100%;">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 style="color: rgb(44, 141, 221)" class="text-center mb-3">  Đăng nhập</h1>
        <%- include ('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label style="color:rgb(37, 116, 180);margin:0 50px 10px" for="email">Email</label>
            <input style="border-radius: 10px; border: 1px solid rgb(37, 116, 180); width: 500px; margin: 0 auto 20px ;"
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label  style="color:rgb(37, 116, 180);margin:0 50px 10px" for="password">Mật khẩu</label>
            <input style="border-radius: 10px; border: 1px solid rgb(37, 116, 180); width: 500px; margin: 0 auto"
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button style="margin-left: 250px; margin-top: 20px;" type="submit" class="btn btn-primary btn-block mb-3">Đăng nhập</button>
        </form>
        <p class="lead mt-4">
           <a class="btn btn-secondary btn-block" href="/users/register">Đăng kí tài khoản</a>
        </p>
      </div>
    </div>
  </div>